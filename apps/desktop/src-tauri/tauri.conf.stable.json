{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "EchoNote",
  "mainBinaryName": "echonote",
  "identifier": "com.echonote.stable",
  "plugins": {
    "deep-link": {
      "desktop": { "schemes": ["echonote"] }
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://desktop2.echonote.com/update/{{target}}-{{arch}}/{{current_version}}?channel=stable"
      ]
    }
  }
}
